---
const {pageTitle} = Astro.props;
import { styles } from "../styles/tailwindStyle";
import { Icon } from 'astro-icon/components';
---

<div x-data="{ open: false }" class="w-full">
    <div class=`flex justify-center px-3 md:px-8 lg:px-16 py-8 md:py-8`>
        <div class="flex md:hidden w-[70%] justify-between"> 
            <a href="/" class="hover:scale-120 ease-in-out transition delay-150"><Icon name="bruh" class="h-12 w-12"/></a>
            <button x-on:click="open = ! open">
                <Icon name="lucide:align-justify" class="text-text h-8 w-8 md:h-12 md:w-12 block md:hidden"/>
            </button>
        </div>
        <div class=`hidden md:flex md:w-[80%] lg:w-[70%] justify-between text-xl`>
            <a href="/" class=`decoration-accent decoration-4 hover:underline ${pageTitle == "Home" ? "underline text-text": "text-sec-300"}`>Home</a>
            <a href="/#about" class=`decoration-accent decoration-4 hover:underline ${pageTitle == "About" ? "underline text-text": "text-sec-300"}`>About</a>
            <a href="/events" class=`decoration-accent decoration-4 hover:underline ${pageTitle == "Events" ? "underline text-text": "text-sec-300"}`>Events</a>
            <a href="/committee" class=`decoration-accent decoration-4 hover:underline ${pageTitle == "Committee" ? "underline text-text": "text-sec-300"}`>Committee</a>
            <a href="/sponsors" class=`decoration-accent decoration-4 hover:underline ${pageTitle == "Sponsors" ? "underline text-text": "text-sec-300"}`>Sponsors</a>
            <a href="/col-aums" class=`decoration-accent decoration-4 hover:underline ${pageTitle == "ColAUMS" ? "underline text-text": "text-sec-300"}`>ColAUMS</a>
        </div>
    </div>
    <div x-show="open" class="z-10 absolute top-20 bg-clip-padding backdrop-filter backdrop-blur-xl bg-opacity-90 h-full w-full">
        <div class="flex flex-col pt-[10vh] items-center gap-12 text-xl h-full w-full">
            <a x-on:click="open = ! open" href="/" class=`decoration-accent decoration-4 hover:underline ${pageTitle == "Home" ? "underline text-text": "text-sec-300"}`>Home</a>
            <a x-on:click="open = ! open" href="/#about" class=`decoration-accent decoration-4 hover:underline ${pageTitle == "About" ? "underline text-text": "text-sec-300"}`>About</a>
            <a x-on:click="open = ! open" href="/events" class=`decoration-accent decoration-4 hover:underline ${pageTitle == "Events" ? "underline text-text": "text-sec-300"}`>Events</a>
            <a x-on:click="open = ! open" href="/committee" class=`decoration-accent decoration-4 hover:underline ${pageTitle == "Committee" ? "underline text-text": "text-sec-300"}`>Committee</a>
            <a x-on:click="open = ! open" href="/sponsors" class=`decoration-accent decoration-4 hover:underline ${pageTitle == "Sponsors" ? "underline text-text": "text-sec-300"}`>Sponsors</a>
            <a x-on:click="open = ! open" href="/col-aums" class=`decoration-accent decoration-4 hover:underline ${pageTitle == "ColAUMS" ? "underline text-text": "text-sec-300"}`>ColAUMS</a>
        </div>
    </div>
</div>