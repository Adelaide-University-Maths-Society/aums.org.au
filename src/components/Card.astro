---
import { styles } from '../styles/tailwindStyle';
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
   imagePath: string;
   name: string;
   role: string;
   description: string;
}

const { imagePath, name, role, description } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/*.{jpeg,jpg,png,gif,svg}');
if (!images[imagePath]) throw new Error(`"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif,svg}"`);
---

<div class="bg-secondary bg-opacity-20 rounded-2xl flex flex-col md:flex-row px-6 py-6 items-center">
    <Image src={images[imagePath]()}  alt={name} class="h-36 rounded-full w-36"></Image>
    <div class="flex flex-col grow md:pl-6 md:pt-0 pt-6">
        <div class=`font-heading font-black text-primary text-2xl`>{name}</div>
        <div class=`font-body font-black text-text text-base`>{role}</div>
        <div class=`font-body font-black text-gray-300 text-sm pt-4` set:html={description}></div>
    </div>
</div>