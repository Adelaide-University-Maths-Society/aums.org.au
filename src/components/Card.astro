---
import { styles } from '../styles/tailwindStyle';
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
   imagePath: string;
   name: string;
   role: string;
   description: string;
}

const { imagePath, name, role, description } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/*.{jpeg,jpg,png,gif,svg}');
if (!images[imagePath]) throw new Error(`"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif,svg}"`);
---

<div class="w-full h-[80vw] md:h-60 bg-secondary bg-opacity-20 rounded-xl flex flex-col md:flex-row px-4 lg:px-8 py-4 lg:py-8 lg:items-center">
    <Image src={images[imagePath]()}  alt={name} class="w-1/2 md:w-min md:h-full rounded-full p-4"></Image>
    <div class="flex flex-col grow">
        <div class=`font-heading font-black text-primary text-lg lg:text-xl`>{name}</div>
        <div class=`font-body font-black text-text text-sm lg:text-base`>{role}</div>
        <div class=`font-body font-black text-gray-300 text-xs lg:text-sm`>{description}</div>
    </div>
</div>