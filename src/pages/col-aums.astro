---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar.astro";
import { styles } from "../styles/tailwindStyle";
import Footer from "../components/Footer.astro";
---

<BaseLayout pageTitle="ColAUMS">
    <Navbar pageTitle="ColAUMS"/>
    <div class=`${styles.colAUMSPadding} text-text font-body ${styles.lgText} flex flex-col justify-center gap-[5vw] pb-8`>
        <div class="text-center">
            <h1>Welcome to <span class="text-accent font-semibold">ColAUMS</span> - AUMS newsletter discussing cool mathematics and exciting new opportunities.</h1>
            <h1><span class="text-accent font-semibold">ColAUMS</span> is written by <span class="text-accent font-semibold">ColAUMS Editor</span>. Please find the latest (and previous) colAUMS articles below.</h1>
        </div>
        <div class="flex flex-col gap-[2vw] text-center">
            <h2 class=`${styles.xl3Text} text-primary font-heading font-extrabold`>Latest Issue</h2>
            <object data="/colAUMS/ColAUMS-2023-E2.pdf" type="application/pdf" class="w-full h-[80vw]">
                <p>Unable to display PDF file. <a href="/colAUMS/ColAUMS-2023-E2.pdf">Download</a> instead.</p>
            </object>
        </div>
        <div class="flex flex-col gap-[2vw] text-center">
            <h2 class=`${styles.xl3Text} text-primary font-heading font-extrabold`>Previous Issues</h2>
            <div class="flex flex-wrap gap-[4vw] items-center justify-center">
                <a class="decoration-accent decoration-2 hover:underline" href="/colAUMS/ColAUMS-2023-E1.pdf">ColAUMS 2023 Issue 1</a>
                <a class="decoration-accent decoration-2 hover:underline" href="/colAUMS/ColAUMS-2023-E0.pdf">ColAUMS 2023 Issue 0</a>
                <a class="decoration-accent decoration-2 hover:underline" href="/colAUMS/ColAUMS-2022-E3.pdf">ColAUMS 2022 Issue 3</a>
                <a class="decoration-accent decoration-2 hover:underline" href="/colAUMS/ColAUMS-2022-E2.pdf">ColAUMS 2022 Issue 2</a>
                <a class="decoration-accent decoration-2 hover:underline" href="/colAUMS/ColAUMS-2022-E1.pdf">ColAUMS 2022 Issue 1</a>
            </div>
        </div>
    </div>
    <Footer/>
</BaseLayout>
